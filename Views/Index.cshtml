@model IEnumerable<FirstASP.Models.Product>

<!DOCTYPE html>
<html>
<head>
    <title>Прайс-лист</title>
    <style>
        table {
            width: 50%;
            border-collapse: collapse;
            margin: 20px 0;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>Прайс-лист</h1>
    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Назва товару</th>
                <th>Ціна (грн)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price:F2</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
